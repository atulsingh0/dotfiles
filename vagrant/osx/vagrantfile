Vagrant.configure("2") do |config|
  config.vm.box = "AndrewDryga/vagrant-box-osx"

  config.vm.provider "virtualbox" do |vb|
    vb.name = "osx"
    vb.cpus = 4
    vb.memory = 4096
  end
end
