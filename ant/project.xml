<?xml version="1.0" encoding="windows-1252"?>

<!--
====================================
VARIABLES DE GENERACIÓN DEL PROYECTO
====================================
-->
<project>

    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - -
        PROPIEDADES DE LA APLICACIÓN
        Datos de la aplicación. Especificos de cada proyecto.
     - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
	<application>
        <!-- Nombre corto de la aplicación. Es usado en los nombres de los ficheros generados. No puede contener espacios. -->
        <name>toolbox</name>

        <!-- Descripción del proyecto (nombre descriptivo de la aplicación). Puede contener cualquier caracter. -->
        <description>ToolBox</description>

        <!-- Comentario del proyecto. -->
        <comment>Proyecto con utilidades básicas generales</comment>

        <!-- Tipo de la aplicación. Los valores válidos que acepta son: 'jar' ó 'war'. -->
        <type>jar</type>

        <!-- Lista de las librerías usadas por la aplicación separadas por espacios. -->
        <libraries>junit-3.8.1.jar</libraries>

        <!-- Clase principal (debe ser una clase con un método 'main'). Debe indicarse el nombre completo (con el paquete). -->
        <main></main>
	</application>

    <!-- - - - - - - - - - - - - - -
        DATOS PARA FIRMAR LOS JAR
     - - - - - - - - - - - - - - -->
	<sign>
        <!-- signAlias -->
        <alias></alias>

        <!-- signStorepass -->
        <storepass></storepass>

        <!-- signKeypass -->
        <keypass></keypass>
	</sign>

    <!-- - - - - - - - - - - - - - - -
        PROPIEDADES DEL DOCLET
        Las comillas son necesarias
     - - - - - - - - - - - - - - - -->
	<doclet>
        <!-- css -->
        <stylesheet></stylesheet>

        <!-- docletDoctitle -->
        <doctitle></doctitle>

        <!-- docletHeader -->
        <header></header>
                
        <!-- docletFooter -->
        <footer></footer>
                
        <!-- docletBottom -->
        <bottom></bottom>
	</doclet>

    <!-- - - - - - - - - - - - - -
        PROPIEDADES DEL SISTEMA
     - - - - - - - - - - - - - -->
	<path>
        <!-- docPath -->
        <doc>doc</doc>

        <!-- javadocPath -->
        <javadoc>${path.doc}/api</javadoc>

        <!-- javadocResourcePath -->
        <javadocResource>${path.doc}/file</javadocResource>

        <!-- binaryPath -->
        <binary>bin</binary>

        <!-- buildPath -->
        <build>build</build>

        <!-- configPath -->
        <config>etc</config>

        <!-- libraryStore -->
        <libraryStore>../lib</libraryStore>

        <!-- resourcePath -->
        <resource>res</resource>

        <!-- filesPath -->
        <files>file</files>

        <!-- distPath -->
        <dist>dist</dist>

        <!-- jarPath -->
        <jar>${path.dist}/jar</jar>

        <!-- warPath -->
        <war>${path.dist}/war</war>

        <!-- tempPath -->
        <temp>tmp</temp>

        <!-- sourcePath -->
        <source>src</source>

        <!-- javaPath -->
        <java>${path.source}/java</java>

        <!-- testPath -->
        <test>${path.source}/test</test>

        <!-- checkStyleJar -->
        <checkstyleJar>/devtools/checkstyle3.4/checkstyle-all-3.4.jar</checkstyleJar>
	</path>
</project>
